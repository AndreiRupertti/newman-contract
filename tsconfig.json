{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "@mappers/*": ["src/mappers/*"],
        "@sample/*": ["src/sample/*"],
        "@types": ["src/types/index"],
        "@tests/*": ["tests/*"],
      }
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
  }