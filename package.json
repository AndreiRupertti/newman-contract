{
  "name": "newman-contract",
  "version": "1.0.0",
  "description": "A helper for contract testing using newman",
  "main": "lib/index",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build-clean": "rm -rf lib/",
    "build": "npm run build-clean && ttsc -p src/tsconfig.json",
    "test": "jest --config jestconfig.json",
    "coverage": "npm run test -- --coverage",
    "lint": "tslint -p src/tsconfig.json",
    "format": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run test",
      "pre-push": "npm build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndreiRupertti/newman-contract.git"
  },
  "keywords": [
    "test",
    "contract",
    "newman",
    "newman-contract",
    "contract-testing",
    "api",
    "api-testing",
    "postman",
    "postman-testing",
    "postman-contract"
  ],
  "author": "AndreiRupertti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AndreiRupertti/newman-contract/issues"
  },
  "homepage": "https://github.com/AndreiRupertti/newman-contract#readme",
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/chai": "^4.2.7",
    "@types/jest": "^24.0.25",
    "@types/js-beautify": "^1.8.1",
    "@types/mocha": "^5.2.7",
    "@types/newman": "^3.11.1",
    "@types/node": "^13.1.8",
    "husky": "^4.0.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "ts-transformer-imports": "^0.4.3",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "ttypescript": "^1.5.10",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "esm": "3.2.25",
    "fast-glob": "^3.1.1",
    "js-beautify": "^1.10.3"
  },
  "peerDependencies": {
    "newman": "4.x"
  }
}
