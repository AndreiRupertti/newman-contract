{
  "name": "newman-contract",
  "version": "1.0.0",
  "description": "A helper for contract testing using newman",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "start": "npm run build && ts-node -r tsconfig-paths/register lib/index",
    "test": " jest --config jestconfig.json",
    "lint": "tslint -p tsconfig.json",
    "format": "npm run lint -- --fix"

  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run test",
      "pre-push": "npm build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndreiRupertti/newman-contract.git"
  },
  "author": "AndreiRupertti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AndreiRupertti/newman-contract/issues"
  },
  "homepage": "https://github.com/AndreiRupertti/newman-contract#readme",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/jest": "^24.0.25",
    "@types/newman": "^3.11.1",
    "husky": "^4.0.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "newman": "^4.5.7"
  }
}
