{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "baseUrl": ".",
      "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
      "paths": {
        "@src/*": ["src/*"],
        "@common/*": ["src/common/*"],
        "@constants/*": ["src/constants/*"],
        "@core/*": ["src/core/*"],
        "@mappers/*": ["src/mappers/*"],
        "@sample/*": ["src/sample/*"],
        "@types": ["src/types/index"],
        "@tests/*": ["tests/*"],
      }
    },
    "include": ["./src", "./tests"],
    "exclude": ["node_modules"]
  }